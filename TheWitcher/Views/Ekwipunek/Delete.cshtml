@model TheWitcher.Data.Models.Ekwipunek

<h1>Usuń Ekwipunek</h1>
<div>
    <h4>Ekwipunek</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Nazwa</dt>
        <dd class="col-sm-10">@Model.Nazwa</dd>
        <dt class="col-sm-2">Typ</dt>
        <dd class="col-sm-10">@Model.Typ</dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" name="postacId" value="@Model.PostacId" />
    <button type="submit" class="btn btn-danger">Usuń</button>
    <a asp-action="Index" asp-route-postacId="@Model.PostacId" class="btn btn-secondary">Anuluj</a>
</form>
