@model TheWitcher.Data.Models.Postac

<h1>Edytuj Postać</h1>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label for="Imie">Imię</label>
        <input asp-for="Imie" class="form-control" />
        <span asp-validation-for="Imie" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Poziom">Poziom</label>
        <input asp-for="Poziom" type="number" class="form-control" />
        <span asp-validation-for="Poziom" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Umiejetnosci">Umiejętności</label>
        <textarea asp-for="Umiejetnosci" class="form-control"></textarea>
        <span asp-validation-for="Umiejetnosci" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="RasaId">Rasa</label>
        <select asp-for="RasaId" class="form-control" asp-items="ViewBag.Rasy"></select>
        <span asp-validation-for="RasaId" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Zapisz</button>
</form>

<p>
    <a asp-action="Index">Powrót do listy</a>
</p>
